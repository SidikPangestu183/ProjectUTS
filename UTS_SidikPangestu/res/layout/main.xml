<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/input_nirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Nirm" />

    <EditText
        android:id="@+id/editNirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/input_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Nama" />

    <EditText
        android:id="@+id/editNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/program_studi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Program Studi" />

    <Spinner
        android:id="@+id/spinPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/input_nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Nilai" />

    <EditText
        android:id="@+id/editNilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnHasil"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:text="Hasil" />

    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yudisium Nilai Atas Nama" />

</LinearLayout>